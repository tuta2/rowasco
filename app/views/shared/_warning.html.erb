<% if @user.errors.any? %>
  <div class="py-2 fixed z-50 bottom-5 right-5">
    <div 
      id="toast-warning" 
      class="flex items-center w-full max-w-xs p-4 text-gray-800 bg-gray-100 rounded-lg shadow-md shadow-slate-400 mx-auto transition transform duration-1000" 
      role="alert"
      data-controller="notification"
      data-notification-delay-value="999999999"
      data-transition-enter-from="opacity-0 translate-x-6"
      data-transition-enter-to="opacity-100 translate-x-0"
      data-transition-leave-from="opacity-100 translate-x-0"
      data-transition-leave-to="opacity-0 translate-x-6"
    >
      <div class="mr-2">
        <div class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8 text-red-700 bg-orange-100 rounded-lg">
          <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM10 15a1 1 0 1 1 0-2 1 1 0 0 1 0 2Zm1-4a1 1 0 0 1-2 0V6a1 1 0 0 1 2 0v5Z"/>
          </svg>
          <span class="sr-only">Warning icon</span>
        </div>
      </div>
      <div class="text-red-900 font-semibold text-sm">
        <% @user.errors.full_messages.each do |message| %>
          <p class="bg-slate-200 p-4 rounded-lg mb-2">
            <%= message %>
          </p>
        <% end %>
      </div>
      <div>
        <button type="button" data-action="notification#hide" class="ms-auto -mx-1.5 -my-1.5 bg-white text-gray-400 hover:text-gray-900 rounded-lg focus:ring-2 focus:ring-gray-300 p-1.5 hover:bg-gray-100 inline-flex items-center justify-center h-8 w-8" aria-label="Close">
          <span class="sr-only">Close</span>
          <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
          </svg>
        </button>
      </div>
    </div>
  </div>
<% end %>
